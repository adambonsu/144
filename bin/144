#!/usr/bin/env ruby
# frozen_string_literal: true

$LOAD_PATH.unshift File.expand_path('../lib', __dir__)
require '144'

test = OneFourFour::Test.new(STDOUT)
test.start('indigo', %w[1x8 3x1 7x8])
test.questions.each_with_index do |_question, index|
  answer = gets.chomp
  test.provide answer.to_i, index
  STDOUT.puts test.questions[index + 1] unless test.questions[index] == test.questions.last
end
